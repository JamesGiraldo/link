<div class="aja my-4">
  <%= simple_form_for @cliente, class: "form-sus" do |f| %>
    <div class="form-group">
       <%= f.label :Nombre, class: "label-sus" %>
       <%= f.input :nombre, label: false , class: "form-control" , placeholder: "Nombre Completo"%>
    </div>
    <div class="form-group">
       <%= f.label :Email, class: "label-sus" %>
       <%= f.input :email , label: false, class: "form-control", placeholder: "Correo Electronico"%>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :Celular, class: "label-sus" %>
        <%= f.input :telefono , label: false, class: "form-control", placeholder: "Telefono Celular"%>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :Ciudad, class: "label-sus" %>
        <%= f.input :ciudad, label: false , class: "form-control", placeholder: "Ciudad Actual"%>
      </div>
    </div>
    <div class="container text-center">
      <%= f.button :submit, "Suscribete", class: "btn btn-outline-info btn-lg" %>
    </div>
  <% end %>
</div>
