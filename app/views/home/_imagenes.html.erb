<div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
  <ol class="carousel-indicators">
    <%= render "ol" %>
  </ol>
  <div class="carousel-inner">
    <% flag = false %>
    <% @imagenes.each do |imagen| %>
      <% if flag %>
        <div class="carousel-item">
          <%= image_tag imagen.avatar.url(:thumb) , class: "d-block w-100"%>
        </div>
      <%else%>
        <div class="carousel-item active">
          <%= image_tag imagen.avatar.url(:thumb) , class: "d-block w-100"%>
          <%flag = true%>
          <div class="carousel-caption d-none d-md-block">
            <%= render "button", img: imagen %>
          </div>
        </div>
      <%end%>
    <%end%>
    <%unless @imagenes.present?%>
      <h1 class="text-center">No Hay Fotos Disponibles</h1>
      <div class="container text-center">
        <%= link_to "Agregar", new_imagen_path(@imagen), class: "btn btn-outline-success"%>
      </div>
    <%end%>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
